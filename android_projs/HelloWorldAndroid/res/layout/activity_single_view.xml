
<!-- layout with linear approach to show new image for entire activity. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	
    <!-- this will show the image for the activity when a click is done
    	for picking the image to render for the entire screen. -->
	<ImageView	    
	    android:id="@+id/SingleView"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"/>
	
</LinearLayout>